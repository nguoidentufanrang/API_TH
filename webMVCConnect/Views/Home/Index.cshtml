@model IEnumerable<webMVCConnect.Models.DTO.BookDTO>
<h2>List all books</h2>
<a class="btn btn-primary" asp-controller="Books" asp-action="addBook">Add new book</a>
<table class="table">
    <tr>
        <th>Id code</th>
        <th>Title</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Rating</th>
        <th>Detail</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>@item?.Id</td>
                <td>@item?.Title</td>
                <td>
                    @if (item?.AuthorNames != null)
                    {
                        foreach (var author in item.AuthorNames)
                        {
                            @author

                            <br />
                        }
                    }
                </td>
                <td>@item?.PublisherName</td>
                <td>
                    @if (item?.Rate != null)
                    {
                        for (var i = 0; i < item.Rate; i++)
                        {
                            <span class="glyphicon glyphicon-star"></span>
                        }
                    }
                </td>
                <td>
                    <a asp-area="" asp-controller="Books" asp-action="listBook" asp-route-id="@item?.Id">Detail</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Books" asp-action="editBook" asp-route-id="@item?.Id">Edit</a>
                </td>
                <td>
                    <a asp-area="" asp-controller="Books" asp-action="delBook" asp-route-id="@item?.Id">Delete</a>
                </td>
            </tr>
        }
    }
</table>

<form asp-controller="Books" asp-action="Index" method="GET">
    <label for="filterOn">Tìm kiếm sách: </label>
    <select name="filterOn" id="filterOn">
        <option value="title">Tiêu đề</option>
        <option value="author">Tác giả</option>
        <option value="publisher">Nhà xuất bản</option>
    </select>
    <input type="text" name="filterQuery" />
    <label for="sortBy">Sắp xếp: </label>
    <select name="sortBy" id="sortBy">
        <option value="title">Tiêu đề</option>
        <option value="rate">Đánh giá</option>
    </select>
    <label>Tăng dần: </label>
    <input type="radio" name="isAscending" value="True" />
    <label>Giảm dần: </label>
    <input type="radio" name="isAscending" value="False" />
    <input type="submit" value="Search" />
</form>
